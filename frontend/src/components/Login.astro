---
const formAction = "/api/login"; // Endpoint to handle authentication
---

<form action={formAction} method="POST" class="flex flex-col gap-4 p-6 max-w-md w-1/4 mx-auto bg-white shadow-lg rounded-2xl">
  <h2 class="text-2xl font-bold text-center text-gray-700">Login</h2>

  <div class="flex flex-col">
    <label for="username" class="text-gray-600 font-medium">Username</label>
    <input type="text" id="username" name="username" required 
      class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" />
  </div>

  <div class="flex flex-col">
    <label for="password" class="text-gray-600 font-medium">Password</label>
    <input type="password" id="password" name="password" required 
      class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" />
  </div>

  <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg transition duration-300">
    Login
  </button>
</form>
